<%= form_with model: @user, url: session_path do |form| %>

    <div class="relative flex flex-col justify-center text-center mt-12">
        <div>
            <%= form.email_field :email, placeholder: "Email", class:"text-sm w-60" %>
        </div>

        <div>
            <%= form.password_field :password, placeholder: "Password", class:"text-sm w-60" %>
        </div>
        <div class="text-white p-5">
            <%= form.submit "Log in", class:"cursor-pointer" %>
        </div>
    </div>
<% end %>

