<%= link_to items_path do %>
    <i class="fas fa-arrow-left relative left-[5%] top-4 text-[40px] hover:scale-125"></i>
<% end %>
<div class="flex justify-center">
    <div class="mt-6" >
       <%= form_with model: @item, local: true do |form| %>
       <h1 class="text-2xl text-center mb-4"> Item</h1>
            <div class='mb-4 flex flex-col items-center' >
                <%= form.label(:path, class: "")%>
                <%= form.text_field(:path, class: "border text-center") %>
            </div>
            <div class='mb-4 flex flex-col items-center'>
                <%= form.label(:name, class: "") %>
                <%= form.text_field(:name, class: "border text-center") %>
            </div>
            <div class='mb-4 flex flex-col items-center'>
                <%= form.label :categorie %>
                <%= form.select(:categorie, ['none', 'weapon', 'shield', 'armor'], {}, {class: "border w-full py-2 text-center"})%>
            </div>
            <div class='mb-4 flex flex-col items-center'>
                <%= form.label :stats %>
                <%= form.number_field :stats, class: "border w-2/4 text-center" %>
            </div>
            <div class='mb-4 flex flex-col items-center'>
                <%= form.label :description %>
                <%= form.text_area :description, class: "border p-2" %>
            </div>
            <div class='mb-4'>
                <img src="/assets/PNG_inventaire/<%= @item.path %>.png" alt="item" class="ml-auto mr-auto border p-4" />
            </div>
            <div class='mb-4 flex justify-center'>
                <%= form.submit("Edit item", class: "bg-cyan-400 p-2 rounded-[7%] cursor-pointer hover:bg-cyan-300") %>
            </div>
       <% end %>
    </div>
</div>