<div>
    <img src="/assets/home/castle_proto_3.png" class="absolute w-full h-full object-cover">
</div>

    <%# Return button %>
    <div class="absolute z-50 top-4 left-4 custom_link">
        <%= link_to game_master_path do %>
            <%= image_tag("/assets/home/close_button.png", class: "w-12") %>
        <% end %>
    </div>

    <%# Title %>
    <div class="relative text-center text-white text-2xl my-4">
        <h1 class="">List of item</h1>
    </div>

    <%# Button add item %>
    <div class="relative text-white left-[115px]">
        <%= link_to new_item_path() do %>
            <img src="/assets/home/buttons/menu_button_01.png" class="custom_link">
            <button class="absolute top-[15px] left-[38px] rounded-[7%] text-[13px] bold custom_link">Add new item</button>
        <% end %>
    </div>

    <%# Table %>
    <div class="relative m-auto flex justify-center align-center items-center w-[80vw] text-white">
        <table class="bg-black/50 w-[100%] mt-4">
            <thead>
                <tr>
                    <th class="h-[8vh]">id</th>
                    <%# <th>path</th> %>
                    <th>name</th>
                    <th>categorie</th>
                    <th>status</th>
                    <th>picture</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                    <tr class="hover:bg-sky-700">
                        <td class="text-center py-2">
                            <%= item.id %>
                        </td>
                        <%# <td class="text-center"> %>
                            <%# <%= item.path %>
                        <%# </td> %>
                        <td class="text-center">
                            <%= item.name %>
                        </td>
                        <td class="text-center">
                            <%= item.categorie %>
                        </td>
                        <td class="text-center">
                            <%= item.stats %>
                        </td>
                        <td class="flex justify-center items-center">
                            <img src="/assets/PNG_inventaire/<%= item.path %>.png" alt="item">
                        </td>
                        <td class="text-center">
                            <%= link_to edit_item_path(item) do %>
                                <button class="bg-sky-700 px-2 py-1 text-white rounded-[10%] hover:bg-sky-600">Edit</button>
                            <% end %>
                        </td>
                        <td class="text-center">
                            <button class="bg-rose-600 px-2 py-1 text-white rounded-[10%] hover:bg-rose-500 ">
                                <%= link_to "Delete", item_path(item), data: {confirm: "Really?", turbo_method: :delete} %>
                            </button>
                        </td>
                    </tr>
                    <% end %>
            </tbody>
        </table>
    </div>