<div class="flex justify-center align-center items-center h-full" style="background: url('/assets/home/dark_forest_01.png') no-repeat center center fixed; background-size: cover;"> 
    <div class="absolute top-4 left-4">
        <%= link_to items_path do %>
            <%= image_tag("/assets/home/close_button.png", class: "w-12") %>
        <% end %>
    </div>
<div class="">
    <div class="mt-10" >
       <%= form_with model: @item, local: true do |form| %>

        <div class="relative">
            <img src="/assets/common/title_bar_01.png">
            <h1 class="absolute top-[22px] left-[160px] text-2xl text-white text-center mb-4">Item</h1>
        </div>
            <div class='mb-4 flex flex-col items-center'>
                <%= form.label(:path, class: "")%>
                <%= form.text_field(:path, class: "") %>
            </div>
             <div class='mb-4 flex flex-col items-center'>
                <%= form.label(:name, class: "") %>
                <%= form.text_field(:name, class: "") %>
            </div>
             <div class='mb-4 flex flex-col items-center'>
                <%= form.label :categorie %>
                <%= form.select(:categorie, ['none', 'weapon', 'shield', 'armor'], {}, {class: "py-2 text-center w-[220px]"})%>
            </div>
             <div class='mb-4 flex flex-col items-center'>
                <%= form.label :stats %>
                <%= form.number_field :stats %>
            </div>
            <div class='relative mb-4 flex justify-center'>
                <img src="/assets/home/button_home3.png" class="w-[200px]">
                <%= form.submit("Create item", class: "absolute top-[44px] p-2 text-white hover:text-[#E92306] custom_link") %>
                </div>
            <% end %>
        </div>
    </div>
</div>