<div>
    <div>
        <img src="/assets/home/castle_proto_2.png" class="absolute w-full h-full object-cover">
    </div>

    <% if user_signed_in? %>
        <%= link_to "Edit Password", edit_password_path %>
        <div class="relative left-6">
        <%= button_to session_path, method: :delete do %>
        <img src="/assets/home/close_button.png" class="w-10 absolute right-12 -top-2">
        </div>
    <% end %>

    <div class="relative flex justify-center">
        <img src="/assets/home/button_home1.png" class="w-80">
        <div class="absolute top-[84px] text-[22px] text-white hover:text-[#CD5C08] cursor-pointer">New character</div>
    </div>

    <div class="relative pt-3 mx-32 cursor-pointer">
        <div class="bg-slate-950/50 w-850">
            <ul>
                <li class="flex">
                    <img src="/assets/common/tree_of_life2.jpg" class="w-48">
                    <div class="flex flex-col justify-center ml-6">
                        <div class="character_name text-white text-3xl">Llorva Virsandoral</div>
                        <div class="date_game text-white text-md">14/11/2023 16:12</div>
                        <div class="last_quest text-white">Last Quest :</div>
                    </div>
                </li>
                <li class="flex border-t border-slate-950">
                    <img src="/assets/common/church.jpg" class="w-48">
                    <div class="flex flex-col justify-center ml-6">
                        <div class="character_name text-white text-3xl">Haldir Faelen</div>
                        <div class="date_game text-white text-md">03/11/2023 18:24</div>
                        <div class="last_quest text-white">Last Quest :</div>
                    </div>
                </li>
            </ul>
        </div>
    </div>

  <% else %>
        <div class="flex flex-col relative justify-center text-center pt-8">
            <h1 class="flex justify-center text-center">
                <img src="/assets/home/logo_proto_3_2.png" class="w-1/4">
            </h1>

            <div class="relative">
                <div class="flex justify-center">
                <img src="/assets/home/button_home1.png" class="relative w-80 -top-[50px]">
                <%= link_to "New Player", new_registration_path, class: "absolute top-9 text-2xl text-white font-medium hover:text-[#E92306]" %>
            </div>
        </div>

        <div class="relative -top-[100px] my-2">
            <div class="flex justify-center">
                <img src="/assets/home/button_home1.png" class="relative w-80 -top-[50px]">
                <%= link_to "Continue", new_session_path, class:"absolute top-9 text-2xl text-white font-medium hover:text-[#E92306]" %>
            </div>
        </div>
      
        <div class="relative -top-[203px]">
            <div class="flex justify-center">
                <img src="/assets/home/button_home1.png" class="relative w-80 -top-[50px]">
                <div class="absolute top-9 text-2xl text-white font-medium hover:text-[#E92306] cursor-pointer">
                    <%= link_to "Game Master", game_master_path %>
                </div>
            </div>
        </div>
    <% end %>
</div>
