<div>
    <video autoplay muted loop id="bg_video" class="absolute w-auto h-screen object-fill">
        <source src="/assets/common/northern-village.mp4" type="video/mp4">
    </video>
    
    <div class="flex flex-col relative justify-center text-center pt-28">
        <h1 class="flex justify-center text-center">
            <img src="/assets/home/logo1.png" class="w-1/4">
        </h1>

        <div class="flex justify-center">
            <img src="/assets/common/separator.png" class="w-1/3">
        </div>

        <div class="relative">
            <div class="flex justify-center">
                <img src="/assets/common/button_proto2.png" class="w-80">
                <p class="absolute top-6 text-2xl text-white hover:text-[#7C54c6]">New Player</p>
            </div>
        </div>
    </div>
    <br />

    <%= form_with model: @user, url: registration_path do |form| %>

        <div class="relative flex flex-col text-center">
            <div class="">
                <%= form.email_field :email, placeholder: "Email", class:"bg-[#504099] border-2 border-white placeholder:text-white text-white ps-4 rounded-full text-sm w-60" %>
            </div>

            <div class="my-2">
                <%= form.password_field :password, placeholder: "Password", class:"bg-[#504099] border-2 border-white placeholder:text-white text-white ps-4 rounded-full text-sm w-60" %>
            </div>

            <div>
                <%= form.password_field :password_confirmation, placeholder: "Password Confirmation", class:"bg-[#504099] border-2 border-white placeholder:text-white text-white ps-4 rounded-full text-sm w-60" %>
            </div>

            <% if form.object.errors.any? %>
                <% form.object.errors.full_messages.each do |message| %>
                    <div class="relative pt-2 text-[#BA0B0D]"><%= message %></div>
                    <% end %>
                <% end %>
            
            <br />

            <div class="relative">
                <div class="flex justify-center">
                    <img src="/assets/common/button_proto2.png" class="w-80">
                    <%= form.submit "Sign up", class:"cursor-pointer absolute top-6 text-2xl text-white hover:text-[#7C54c6]" %>
                </div>
            </div>
        </div> 
    <% end %>
</div>