<h1 class="mb-8 text-center text-purple-500"></h1>

<%= form_with model: @user, url: registration_path do |form| %>

    <div class="relative flex flex-col text-center">
        <div class="">
            <%= form.email_field :email, placeholder: "Email", class:"text-sm w-80" %>
        </div>

    <div class="my-2">
        <%= form.password_field :password, placeholder: "Password", class:"text-sm w-80" %>
    </div>

    <div>
        <%= form.password_field :password_confirmation, placeholder: "Password Confirmation", class:"text-sm w-80" %>
    </div>

    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
            <div class="relative pt-2 text-[#BA0B0D]"><%= message %></div>
            <% end %>
        <% end %>

    <div class="pt-3 text-white">
        <%= form.submit "Sign up", class:"cursor-pointer" %>
    </div>
    </div> 
<% end %>