<!DOCTYPE html>
<html>
  <head>
    <title>Rpg</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="">

  <div><%= notice %></div>
  <div><%= alert %></div>

  <video autoplay muted loop id="bg_video" class="absolute w-auto h-screen object-fill">
    <source src="/assets/northern-village.mp4" type="video/mp4">
  </video>

  <div class="absolute w-8 top-4 right-4 cursor-pointer">
    <img src="/assets/sound-bar.png">
  </div>

  <% if user_signed_in? %>
    <%= link_to "Edit Password", edit_password_path %>
    <div class="relative left-6">
    <%= button_to session_path, method: :delete do %>
      <img src="/assets/shut_down.png" class="w-10">
    <% end %>
    </div>

    <div class="relative flex justify-center">
      <img src="/assets/button_proto1.png" class="w-80">
      <div class="absolute top-8 text-2xl text-white hover:text-[#7C54c6] cursor-pointer">New character</div>
    </div>

    <div class="relative pt-3 mx-32 cursor-pointer">
      <div class="bg-slate-950/50 w-850">
        <ul>
          <li class="flex">
            <img src="/assets/tree_of_life2.jpg" class="w-48">
            <div class="flex flex-col justify-center ml-6">
              <div class="character_name text-white text-3xl">Llorva Virsandoral</div>
              <div class="date_game text-white text-md">14/11/2023 16:12</div>
              <div class="last_quest text-white">Last Quest :</div>
            </div>
          </li>
          <li class="flex border-t border-slate-950">
             <img src="/assets/church.jpg" class="w-48">
             <div class="flex flex-col justify-center ml-6">
              <div class="character_name text-white text-3xl">Haldir Faelen</div>
              <div class="date_game text-white text-md">03/11/2023 18:24</div>
              <div class="last_quest text-white">Last Quest :</div>
             </div>
          </li>
          <li class="flex">
            <progress value="30" max="100" id="hp_bar"></progress>
          </li>
        </ul>
      </div>
    </div>

  <% else %>
  <div class="flex flex-col relative justify-center text-center pt-28">
    <h1 class="flex justify-center text-center">
      <img src="/assets/logo1.png" class="w-1/4">
    </h1>

  <div class="flex justify-center">
    <img src="/assets/separator.png" class="w-1/3">
  </div>

    <div class="relative">
      <div class="flex justify-center">
        <img src="/assets/button_proto2.png" class="w-80">
        <%= link_to "New Player", new_registration_path, class: "absolute top-6 text-2xl text-white hover:text-[#7C54c6]" %>
      </div>
    </div>

    <div class="relative my-2">
      <div class="flex justify-center">
        <img src="/assets/button_proto2.png" class="w-80">
        <%= link_to "Continue", new_session_path, class:"absolute top-6 text-2xl text-white hover:text-[#7C54c6]" %>
      </div>
    </div>
      
      <div class="relative">
        <div class="flex justify-center">
          <img src="/assets/button_proto2.png" class="w-80">
        <div class="absolute top-6 text-2xl text-white hover:text-[#7C54c6] cursor-pointer">Game Master</div>
      </div>
    </div>
  </div>
  <% end %>

  <%= yield %>

  <script>
    
  </script>

  </body>
</html>